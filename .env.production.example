# Production Environment Variables for UrbanAI
# Copy this file to .env.production and update values

# Database Configuration
ConnectionStrings__DefaultConnection=Server=tcp:your-server.database.windows.net,1433;Initial Catalog=urbanai-db;Persist Security Info=False;User ID=your-user;Password=your-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# Application URLs
FrontendBaseUrl=https://www.urbanai.site
ApiBaseUrl=https://api.urbanai.site
AllowedHosts=www.urbanai.site,api.urbanai.site,localhost

# OAuth Configuration
Google__ClientId=your-google-client-id
Google__ClientSecret=your-google-client-secret
Microsoft__ClientId=your-microsoft-client-id
Microsoft__ClientSecret=your-microsoft-client-secret
Facebook__ClientId=your-facebook-client-id
Facebook__ClientSecret=your-facebook-client-secret

# Security
Jwt__Key=your-super-secret-jwt-key-here-min-32-characters
Jwt__Issuer=https://api.urbanai.site
Jwt__Audience=https://www.urbanai.site

# Azure Services
ApplicationInsights__InstrumentationKey=your-instrumentation-key
AzureStorage__ConnectionString=your-storage-connection-string

# Email Service (if used)
Email__SmtpServer=your-smtp-server
Email__SmtpPort=587
Email__Username=your-email-username
Email__Password=your-email-password
Email__FromAddress=noreply@urbanai.site

# Logging
Serilog__MinimumLevel=Information
