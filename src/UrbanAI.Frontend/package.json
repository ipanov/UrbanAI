{
  "name": "urbanai-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^23.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test --project=chromium-fast",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:visual": "playwright test tests/visual/visual-regression.spec.ts --project=chromium-fast",
    "test:e2e:headed": "playwright test --project=chromium-fast --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:fast": "playwright test --project=chromium-fast",
    "test:e2e:smoke": "playwright test --project=smoke",
    "test:e2e:mobile": "playwright test --project=mobile-chrome",
    "test:e2e:production": "playwright test --project=chromium-fast",
    "test:e2e:all": "playwright test --workers=2",
    "test:e2e:ci": "playwright test --project=chromium-fast --project=smoke --workers=2 --reporter=github",
    "test:ux-flow": "playwright test ux-flow.spec.ts",
    "test:ux-flow:headed": "playwright test ux-flow.spec.ts --headed",
    "test:complete": "npm run test && npm run test:coverage && npm run test:e2e:all",
    "test:ci": "npm run type-check && npm run lint && npm run test && npm run test:e2e:ci",
    "playwright:install": "playwright install",
    "playwright:install:all": "playwright install --with-deps",
    "start:server": "cd ../../ && node server.js",
    "start:all": "concurrently \"npm run start:server\" \"npm run dev\"",
    "validate:ux": "npm run test:ux-flow:headed && npm run test:e2e:mobile",
    "clean:test-artifacts": "rm -rf playwright-report test-results .nyc_output",
    "clean:all-artifacts": "npm run clean:test-artifacts && rm -rf coverage node_modules/.cache",
    "test:e2e:clean": "npm run test:e2e && npm run clean:test-artifacts",
    "test:e2e:all:clean": "npm run test:e2e:all && npm run clean:test-artifacts"
  }
}
